class Solution(object):
    def twoSum(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: List[int]
        """


        hashmap = {}

        for i, num in enumerate(nums):
            remain = target - nums[i]

            if remain in hashmap:
                return [hashmap[remain] , i]

